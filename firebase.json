{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099,
      "host": "0.0.0.0",
      "cors": [
        {
          "origin": "*"
        }
      ]
    },
    "firestore": {
      "port": 9900,
      "host": "0.0.0.0"
    },
    "database": {
      "port": 9901,
      "host": "0.0.0.0"
    },
    "pubsub": {
      "port": 9902,
      "host": "0.0.0.0"
    },
    "storage": {
      "port": 9903,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 9904
    },
    "singleProjectMode": true
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
